<h1>Doctor <%=  @doctor.name%>'s Appointment Information</h1>
<h2>Specialty: <%= @doctor.department %></h2>
<div>
<%# .strftime("%B %d, %Y at %H:%M") %>
  <% @doctor.appointments.each do |appointment| %>
    <h3>Date: <%=  appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")%></h3><br>
    <label>Patient: </label>
    <%= link_to appointment.patient.name , patient_path(appointment.patient) %>
  <% end %>
</div>

